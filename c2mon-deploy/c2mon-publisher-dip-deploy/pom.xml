<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.c2mon-client</groupId>
    <artifactId>c2mon-client-pom</artifactId>
    <version>1.0.13</version>
  </parent>

  <groupId>cern.c2mon.c2mon-deploy</groupId>
  <artifactId>c2mon-publisher-dip-deploy</artifactId>
  <name>Deploys the DIP publisher for the C2MON </name>
  <version>1.2.1-SNAPSHOT</version>

  <packaging>pom</packaging>

  <description>
    C2MON DIP publisher assembling all required modules and configuration files for TIM2
  </description>
  <url></url>

  <developers />
  
  <!-- This is needed to retrieve the DIP dependencies -->
  <repositories>
    <repository>
      <id>cern-nexus</id>
      <name>CERN Central Nexus</name>
      <url>https://j2eeps.cern.ch/nexus/content/groups/public</url>
    </repository>
  </repositories>
  
  <properties>
    <dip.version>5.5.0</dip.version>
    <dip.native.libs.dir.rel>dip-${dip.version}/lib64</dip.native.libs.dir.rel>
    <dip.native.libs.dir.abs>${project.build.directory}/lib_so/${dip.native.libs.dir.rel}</dip.native.libs.dir.abs>
  </properties>

  <dependencies>
    <dependency>
      <groupId>cern.c2mon.c2mon-publisher</groupId>
      <artifactId>c2mon-publisher-dip</artifactId>
      <version>[1.0.0,2.0.0)</version>
    </dependency>
  </dependencies>
  <modules>
    <module>modules/tim2</module>
  </modules>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/c2mon-publisher-dip-deploy</developerConnection>
  </scm>
  <build />



</project>
