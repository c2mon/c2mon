<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"	
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- scan the module for annotations -->
  <context:annotation-config/>
  <context:component-scan base-package="cern.c2mon.server.lifecycle"/>  
  
  <!-- import the optional modules loaded in a separate Spring configuration file (in the server configuration directory) -->
  <import resource="file:${c2mon.home}/conf/c2mon-modules.xml"/>
  <import resource="file:${c2mon.home}/conf/c2mon-datasource.xml"/>
  
  <!-- import server properties -->
  <import resource="classpath:cern/c2mon/server/lifecycle/config/server-lifecycle-properties.xml"/>
  
  <bean id="lifecycleProcessor" class="org.springframework.context.support.DefaultLifecycleProcessor">
    <!-- timeout value in milliseconds -->
    <property name="timeoutPerShutdownPhase" value="20000"/>    
  </bean>
  
  <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter">
<!--    <property name="beans">-->
<!--      <map>-->
<!--        <entry key="cern.c2mon:name=lifeCycleController" value-ref="lifeCycleController"/>-->
<!--        <entry key="cern.c2mon:name=supervisionNotifier" value-ref="supervisionNotifier"/>-->
<!--      </map>-->
<!--    </property> -->
    <property name="assembler" ref="assembler"/>
    <property name="autodetectModeName" value="AUTODETECT_ASSEMBLER"/>
    <property name="namingStrategy" ref="namingStrategy"/>    
  </bean>
  
  <bean id="assembler" class="org.springframework.jmx.export.assembler.MetadataMBeanInfoAssembler">
    <property name="attributeSource" ref="attributeSource"/>
  </bean>
  
  <bean id="attributeSource" class="org.springframework.jmx.export.annotation.AnnotationJmxAttributeSource"/>
  
  <bean id="namingStrategy" class="org.springframework.jmx.export.naming.MetadataNamingStrategy">
    <property name="attributeSource" ref="attributeSource"/>
  </bean>

</beans>
