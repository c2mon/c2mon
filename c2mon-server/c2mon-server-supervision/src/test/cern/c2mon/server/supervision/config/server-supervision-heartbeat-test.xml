<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- import properties -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="locations" >
      <list>
        <value>file:${c2mon.properties.location}</value>
      </list>
    </property>   
  </bean>
  
  <bean id="clusterCache" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="cern.c2mon.server.cache.ClusterCache" />
  </bean>
  
  <!-- no external modules needed for Heartbeat -->
  <import resource="classpath:cern/c2mon/server/supervision/config/server-supervision-heartbeat.xml"/>
</beans>
