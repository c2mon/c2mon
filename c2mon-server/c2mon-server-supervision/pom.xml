<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>cern.c2mon.c2mon-server</groupId>
    <artifactId>c2mon-server-pom</artifactId>
    <version>1.1.0</version>
  </parent>
  <groupId>cern.c2mon.c2mon-server</groupId>
  <artifactId>c2mon-server-supervision</artifactId>
  <version>1.2.0-SNAPSHOT</version>
  <name>c2mon-server-supervision</name>
  <packaging>jar</packaging>
  <description>C2MON server supervision module, managing DAQ start-up/shutdown and alive timers</description>
  <url>http://timweb.cern.ch</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-server/c2mon-server-supervision</developerConnection>
  </scm>
  
  <dependencies>
    <!-- test -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymockclassextension</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
    </dependency>

    <!-- 3rd party -->
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>

    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-common</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-daqcommunication-out</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-shared</groupId>
      <artifactId>c2mon-shared-client</artifactId>
    </dependency>
  </dependencies>
  <developers />
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>     
        <version>2.8.1</version>   
        <configuration>
          <argLine>
            -Dc2mon.properties.location=${c2mon.properties.location}
            
            <!-- Terracotta license key path -->
            -Dcom.tc.productkey.path=${com.tc.productkey.path}
            -Dc2mon.log.dir=${basedir}/build/log
                                   
            <!-- module properties -->
            -Dc2mon.jms.heartbeat.topic=test.tim.sys.hearbeat
            -Dc2mon.jms.heartbeat.user=not-used
            -Dc2mon.jms.heartbeat.password=not-used   
            
            <!-- cache module -->
            -Ddatasource.persistence.connections.initial=2
            -Ddatasource.persistence.connections.max=2
            -Dcache.loader.batch.size=10000
            -Dcache.loader.threads.max=2
            -Dcache.loader.queue.size=1000
            -Dcache.loader.equipment.batch.size=5
            -Dcache.loader.equipment.threads.max=2
            -Dcache.loader.equipment.queue.size=1000  

            <!-- supervision -->
            -Dc2mon.heartbeat.interval=60000
            -Dc2mon.jms.heartbeat.topic=test.tim.sys.hearbeat
            -Dc2mon.jms.heartbeat.user=not-used
            -Dc2mon.jms.heartbeat.password=not-used  
              
            <!--
              daq communication in
            -->
            -Djms.daq.in.connections=1
            -Djms.update.consumers.max=1
            -Djms.update.consumers.initial=1
            -Djms.update.consumers.warmuptime=1
            -Dc2mon.jms.daqin.connections.max=1
            -Djms.process.updateQueueTrunk=test.tim.process.update
            -Djms.update.transacted=true
            -Djms.process.requestQueue=test.tim.process.request
            -Djms.request.connections.max=1
            -Djms.request.consumers.initial=1
            -Djms.request.consumers.max=1
            -Djms.request.transacted=false

            <!-- daq out -->
            -Djms.daq.out.connections=1            
          </argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>