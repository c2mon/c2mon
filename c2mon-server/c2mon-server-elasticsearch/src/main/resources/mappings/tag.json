{
  "_routing": {
    "required": true
  },
  "dynamic_templates": [
    {
      "nested_metadata_template": {
        "mapping": {
          "index": "not_analyzed"
        },
        "match_mapping_type": "string",
        "path_match": "metadata.*"
      }
    }
  ],
  "properties": {
    "id": {
      "type": "long"
    },
    "name": {
      "type": "string",
      "index": "not_analyzed"
    },
    "description": {
      "type": "string",
      "index": "analyzed"
    },
    "metadata": {
      "type": "object",
      "dynamic": "true"
    },
    "unit": {
      "type": "string",
      "index": "not_analyzed"
    },
    "mode":{
      "type": "string",
      "index": "not_analyzed"
    },
    "c2mon": {
      "dynamic": "true",
      "properties": {
        "dataType": {
          "type": "string",
          "index": "not_analyzed"
        },
        "process": {
          "type": "string",
          "index": "not_analyzed"
        },
        "equipment": {
          "type": "string",
          "index": "not_analyzed"
        },
        "subEquipment": {
          "type": "string",
          "index": "not_analyzed"
        },
        "serverTimestamp": {
          "type": "date",
          "format": "epoch_millis"
        },
        "daqTimestamp": {
          "type": "date",
          "format": "epoch_millis"
        },
        "sourceTimestamp": {
          "type": "date",
          "format": "epoch_millis"
        }
      }
    },
    "timestamp": {
      "type": "date",
      "format": "epoch_millis"
    },
    "quality": {
      "dynamic": "false",
      "properties": {
        "status": {
          "type": "integer"
        },
        "statusInfo": {
          "type": "string",
          "index": "not_analyzed"
        },
        "valid": {
          "type": "boolean"
        }
      }
    },
    "valueDescription": {
      "type": "string",
      "index": "not_analyzed"
    }
  }
}