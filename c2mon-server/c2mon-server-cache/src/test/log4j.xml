<?xml version="1.0" encoding="UTF-8" ?>

<!-- default log4j configuration for JUnit tests -->
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false"
                     threshold="all"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

<!--
    Create a ConsoleAppender.
    Log messages are written to the console
  -->
  <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c %x - %m%n"/>
    </layout>
  </appender>

  <appender name="FileAppender" class="org.apache.log4j.RollingFileAppender">    
    <param name="Append" value="true" />
    <param name="File" value="${user.home}/cache-module.log" />
    <param name="MaxBackupIndex" value="10" />
    <param name="MaxFileSize" value="3MB" />
    <param name="BufferedIO" value="false" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c %x - %m%n"/>
    </layout>
  </appender>
  
  <root>
    <level value="all"/>
    <appender-ref ref="ConsoleAppender" />
  </root>

</log4j:configuration>
