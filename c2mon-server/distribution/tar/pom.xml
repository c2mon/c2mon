<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.server</groupId>
    <artifactId>distribution</artifactId>
    <version>1.9.3-SNAPSHOT</version>
  </parent>

  <artifactId>c2mon-server</artifactId>
  <name>c2mon-server :: tarball</name>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-cache-actions</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-cachedbaccess</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-cache-loading</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-cache-provider-ignite</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-cachepersistence</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-client</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-command</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-common</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-configuration</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-daq</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-lifecycle</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-rule</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-history</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-supervision</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.server</groupId>
      <artifactId>c2mon-server-elasticsearch</artifactId>
    </dependency>
    
    <!-- Runtime dependencies required to support HTTP via ActiveMQ -->
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-http</artifactId>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-server</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Create a tar.gz -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <finalName>c2mon-server-${project.version}</finalName>
          <appendAssemblyId>false</appendAssemblyId>
          <descriptors>
            <descriptor>./assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>false</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>false</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
