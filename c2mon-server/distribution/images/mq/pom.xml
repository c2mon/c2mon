<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>cern.c2mon.server</groupId>
		<artifactId>c2mon-docker-parent</artifactId>
		<version>1.9.11-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>img-mq</artifactId>
	<name>c2mon-server :: activemq image</name>
	<packaging>jar</packaging>
	<properties>
		<image.base>gitlab-registry.cern.ch/industrial-controls/sw-infra/cc7-openjdk:jre-8</image.base>
		<image.tag>activemq-${org.apache.activemq.version}-c2mon-${project.version}</image.tag>
		<gitlab-repo>c2mon/mq</gitlab-repo>
		<dockerhub-repo>cern/c2mon-ext</dockerhub-repo>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.apache.activemq</groupId>
			<artifactId>apache-activemq</artifactId>
			<version>${org.apache.activemq.version}</version>
			<type>tar.gz</type>
			<classifier>bin</classifier>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.2</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.activemq</groupId>
									<artifactId>apache-activemq</artifactId>
									<version>${org.apache.activemq.version}</version>
									<type>tar.gz</type>
									<classifier>bin</classifier>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/output</outputDirectory>
									<includes>**/*</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<target>
								<taskdef name="patchFile" classname="com.github.dnault.xmlpatch.ant.PatchXmlFile" classpathref="maven.plugin.classpath"/>
								<copy file="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/activemq.xml" tofile="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/temp.xml"/>
								<delete file="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/activemq.xml"/>
								<patchFile src="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/temp.xml" patch="${project.basedir}/src/main/patches/patch.xml" dest="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/activemq.xml"/>
								<delete file="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/temp.xml"/>
								<replaceregexp file="${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}/conf/activemq.xml" match='transportConnector xmlns=""' replace="transportConnector" byline="true"/>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>com.github.dnault</groupId>
						<artifactId>xml-patch</artifactId>
						<version>0.3.1</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>com.google.cloud.tools</groupId>
				<artifactId>jib-maven-plugin</artifactId>
				<configuration>
					<container>
						<!--<volumes>
							<volume>/opt/activemq/log</volume>
						</volumes>-->
						<ports>
							<port>8161</port>
							<port>61616</port>
							<port>5672</port>
							<port>61613</port>
							<port>1883</port>
							<port>61614</port>
							<port>8086</port>
						</ports>
						<environment>
							<ACTIVEMQ_TMP>/tmp</ACTIVEMQ_TMP>
						</environment>
						<workingDirectory>/opt/activemq</workingDirectory>
						<entrypoint>
							<entry>bin/activemq</entry>
							<entry>console</entry>
						</entrypoint>
						<user>1000:0</user>
					</container>
					<extraDirectories>
						<paths>
							<path>
								<from>${project.build.directory}/output/apache-activemq-${org.apache.activemq.version}</from>
								<into>/opt/activemq</into>
							</path>
						</paths>
						<permissions>
							<permission>
								<file>/opt/activemq/conf/*</file>
								<mode>644</mode>
							</permission>
							<permission>
								<file>/opt/activemq/bin/activemq</file>
								<mode>755</mode>
							</permission>
							<permission>
								<file>/opt/activemq/data</file>
								<mode>777</mode>
							</permission>
							<permission>
								<file>/opt/activemq/data/activemq.log</file>
								<mode>777</mode>
							</permission>
						</permissions>
					</extraDirectories>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
