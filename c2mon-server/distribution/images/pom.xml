<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.server</groupId>
    <artifactId>distribution</artifactId>
    <version>1.9.11-SNAPSHOT</version>
  </parent>

  <artifactId>c2mon-docker-parent</artifactId>
  <packaging>pom</packaging>

  <modules>
    <module>mysql</module>
    <module>server</module>
    <module>es</module>
    <module>mq</module>
    <module>grafana</module>
  </modules>

  <properties>
    <image.base />
    <gitlab>gitlab-registry.cern.ch/c2mon</gitlab>
    <gitlab-repo />
    <dockerhub>registry.hub.docker.com</dockerhub>
    <dockerhub-repo />
    <image.tag />
    <skipDocker>false</skipDocker>
  </properties>

  <build>
    <plugins>
      <!-- Building this so jib doesn't crash for missing folder -->
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <configuration>
              <target>
                <mkdir dir="${project.build.directory}/classes" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <version>2.2.0</version>
        <executions>
          <execution>
            <phase>deploy</phase>
            <id>build-dockerhub</id>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <skip>true</skip>
              <to>
                <image>${dockerhub}/${dockerhub-repo}</image>
              </to>
            </configuration>
          </execution>
          <execution>
            <phase>deploy</phase>
            <id>build-gitlab</id>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <allowInsecureRegistries>false</allowInsecureRegistries>
              <to>
                <image>${gitlab}/${gitlab-repo}</image>
              </to>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <from>
            <image>${image.base}</image>
          </from>
          <to>
            <tags>
              <tag>${image.tag}</tag>
            </tags>
          </to>
          <container>
            <creationTime>USE_CURRENT_TIMESTAMP</creationTime>
          </container>
          <skip>${skipDocker}</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>2.10</version>
          <configuration>
            <skip>${skipDocker}</skip>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
