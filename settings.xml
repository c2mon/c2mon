<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
      <id>c2mon-nexus-releases</id>
      <username>${env.NEXUS_USERNAME}</username>
      <password>${env.NEXUS_PASSWORD}</password>
    </server>
    <server>
      <id>gitlab-registry.cern.ch</id>
      <username>${env.DOCKER_USERNAME}</username>
      <password>${env.DOCKER_PASSWORD}</password>
      <configuration>
        <email>${env.DOCKER_EMAIL}</email>
      </configuration>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>c2mon-releases</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <nexus.releases.url>https://repository.cern.ch/nexus/content/repositories/c2mon-internal-releases/</nexus.releases.url>
        <nexus.snapshots.url>https://repository.cern.ch/nexus/content/repositories/c2mon-snapshots/</nexus.snapshots.url>
      </properties>
      
      <repositories>
        <repository>
          <id>central</id>
          <url>http://artifactory/release</url>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>snapshot</id>
          <url>http://artifactory/development</url>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url>http://artifactory/release</url>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>snapshot</id>
          <url>http://artifactory/development</url>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
</settings>
