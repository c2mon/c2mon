<?xml version="1.0" encoding="UTF-8" ?>

  <!-- default log4j configuration for JUnit tests -->
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" threshold="debug" xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <renderer  renderedClass="cern.c2mon.client.common.tag.ClientDataTagValue"
             renderingClass="cern.c2mon.client.common.tag.ClientDataTagValueRenderer" />

  <!--
    Create a ConsoleAppender.
    Log messages are written to the console
  -->
  <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c %x- %m%n" />
    </layout>
  </appender>

  <logger name="org.springframework">
    <level value="warn" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  
  <logger name="org.apache">
    <level value="warn" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  
  <logger name="cern.c2mon.client" >
    <level value="warn" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  
  <root>
    <level value="debug" />
    <appender-ref ref="ConsoleAppender" />
  </root>

</log4j:configuration>
