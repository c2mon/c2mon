			</dependency>
			<dependency>
				<groupId>cern.c2mon.c2mon-shared</groupId>
				<artifactId>c2mon-shared-daq</artifactId>
				<version>LATEST</version>
				<exclusions>
					<exclusion>
						<groupId>org.springframework</groupId>
						<artifactId>spring</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>cern.c2mon.c2mon-shared</groupId>
				<artifactId>c2mon-shared-client</artifactId>
				<version>LATEST</version>
			</dependency>
			<dependency>
				<groupId>cern.c2mon.c2mon-shared</groupId>
				<artifactId>c2mon-shared-rule</artifactId>
				<version>LATEST</version>
			</dependency>
			<dependency>
				<groupId>cern.c2mon.c2mon-shared</groupId>
				<artifactId>c2mon-shared-persistence-manager</artifactId>
